---
// components
import HeaderLink from './HeaderLink.astro';

// utils
import { SITE_TITLE } from '../consts';
---

<header>
	<h2>
		{SITE_TITLE}
	</h2>
	<nav>
		<HeaderLink href="/">
			Home
		</HeaderLink>
		<HeaderLink href="/blog">
			Blog
		</HeaderLink>
		<HeaderLink href="/about">
			About
		</HeaderLink>
		<HeaderLink
			href="https://twitter.com/jason_anrico"
			target="_blank"
		>
			Twitter
		</HeaderLink>
		<HeaderLink
			href="https://github.com/anricoj1"
			target="_blank"
		>
			GitHub
		</HeaderLink>
	</nav>
</header>
<style>
	header {
		margin: 0em 0 2em;
		padding: 20px;
	}
	h2 {
		margin: 0.5em 0;
	}
</style>
